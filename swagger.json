{
  "openapi": "3.0.0",
  "info": {
    "title": "API - Gerenciador de Tarefas Acadêmicas",
    "version": "1.0.0",
    "description": "Documentação interativa da API de tarefas."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Servidor Local"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/tasks": {
      "get": {
        "summary": "Lista todas as tarefas",
        "tags": ["Tarefas"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Sucesso. Retorna a lista de tarefas." }
        }
      },
      "post": {
        "summary": "Cria uma nova tarefa",
        "tags": ["Tarefas"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string", "example": "Estudar Node.js" },
                  "description": {
                    "type": "string",
                    "example": "Revisar rotas e controllers"
                  },
                  "deadline": { "type": "string", "example": "2026-12-30" },
                  "subjectId": { "type": "integer", "example": 1 }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Tarefa criada com sucesso." },
          "400": { "description": "Erro de validação (ex: data no passado)." }
        }
      }
    },
    "/tasks/{id}": {
      "put": {
        "summary": "Atualiza uma tarefa",
        "tags": ["Tarefas"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "ID da tarefa",
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "Estudar Node.js Revisado"
                  },
                  "description": {
                    "type": "string",
                    "example": "CRUD finalizado"
                  },
                  "deadline": { "type": "string", "example": "2026-12-31" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Tarefa atualizada com sucesso." }
        }
      },
      "delete": {
        "summary": "Deleta uma tarefa",
        "tags": ["Tarefas"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "ID da tarefa a ser deletada",
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Tarefa deletada com sucesso." }
        }
      }
    }
  }
}
